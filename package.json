{
  "name": "@adonisjs/persona",
  "version": "1.0.0",
  "description": "Opinionated user management service for AdonisJs",
  "main": "index.js",
  "scripts": {
    "lint": "standard",
    "pretest": "npm run lint",
    "posttest": "npm run coverage",
    "test": "nyc japa",
    "test:win": "node ./node_modules/japa-cli/index.js",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "files": [
    "README.md",
    "instructions.md",
    "instructions.js",
    "src",
    "providers",
    "config"
  ],
  "keywords": [
    "adonisjs",
    "adonis-framework"
  ],
  "author": "virk",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/ace": "^5.0.1",
    "@adonisjs/fold": "^4.0.7",
    "@adonisjs/framework": "^5.0.5",
    "@adonisjs/lucid": "^5.0.3",
    "@adonisjs/sink": "^1.0.16",
    "@adonisjs/validator": "^5.0.3",
    "coveralls": "^3.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "japa": "^1.0.5",
    "japa-cli": "^1.0.1",
    "nyc": "^11.6.0",
    "sqlite3": "^4.0.0",
    "standard": "^10.0.3"
  },
  "dependencies": {
    "@adonisjs/generic-exceptions": "^2.0.0",
    "moment": "^2.21.0",
    "rand-token": "^0.4.0"
  },
  "standard": {
    "globals": [
      "use"
    ]
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adonisjs/adonis-persona.git"
  },
  "bugs": {
    "url": "https://github.com/adonisjs/adonis-persona/issues"
  },
  "homepage": "https://github.com/adonisjs/adonis-persona#readme",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
